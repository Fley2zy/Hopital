{% extends 'base.html.twig' %}

{% block title %}Sejour index{% endblock %}

{% block body %}
    <h1>Sejour index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>DateArrive</th>
                <th>DateSortie</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for sejour in sejours %}
            <tr>
                <td>{{ sejour.id }}</td>
                <td>{{ sejour.dateArrive ? sejour.dateArrive|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ sejour.dateSortie ? sejour.dateSortie|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('sejour_show', {'id': sejour.id}) }}">show</a>
                    <a href="{{ path('sejour_edit', {'id': sejour.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('sejour_new') }}">Create new</a>
{% endblock %}
